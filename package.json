{
	"name": "@davidosborn/getopt",
	"version": "0.0.9",
	"description": "A full-featured parser for command-line arguments",
	"keywords": [
		"argument",
		"arguments",
		"getopt",
		"getopts",
		"option",
		"options",
		"parse",
		"parser"
	],
	"homepage": "https://github.com/davidosborn/getopt#readme",
	"bugs": {
		"url": "https://github.com/davidosborn/getopt/issues",
		"email": "davidcosborn@gmail.com"
	},
	"license": "MIT",
	"author": {
		"name": "David Osborn",
		"email": "davidcosborn@gmail.com",
		"url": "http://davidosborn.io/"
	},
	"files": [
		"lib",
		"src"
	],
	"main": "lib/getopt.js",
	"bin": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/davidosborn/getopt"
	},
	"scripts": {
		"build": "npx babel -d lib src",
		"lint": "npx eslint src test",
		"jest": "npx jest",
		"prepublishOnly": "npm run build",
		"start": "node index",
		"test": "npm run lint && npm run jest"
	},
	"dependencies": {
		"flat-map-polyfill": "*",
		"lodash.defaultsdeep": "*",
		"lodash.isstring": "*",
		"word-wrap": "*"
	},
	"devDependencies": {
		"@babel/cli": "*",
		"@babel/core": "*",
		"@babel/register": "*",
		"@davidosborn/babel-preset": "*",
		"babel-eslint": "*",
		"babel-jest": "*",
		"eslint": "*",
		"eslint-plugin-jest": "*",
		"jest": "*"
	},
	"publishConfig": {
		"access": "public"
	},
	"babel": {
		"presets": [
			"@davidosborn/babel-preset"
		]
	},
	"eslintConfig": {
		"env": {
			"node": true
		},
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaVersion": 9,
			"sourceType": "module"
		},
		"plugins": [
			"jest"
		]
	},
	"jest": {
		"testEnvironment": "node",
		"verbose": true
	}
}
